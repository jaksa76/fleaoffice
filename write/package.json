{
  "name": "write",
  "version": "1.0.0",
  "description": "A simple markdown document editor for Fleabox",
  "main": "app.js",
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "fleabox": "npm run build && fleabox --dev --apps-dir dist",
    "test": "npm run build && playwright test",
    "test:ui": "npm run build && playwright test --ui",
    "test:debug": "npm run build && playwright test --debug",
    "test:headed": "npm run build && playwright test --headed",
    "clean": "rm -rf dist test-results playwright-report test-results.json"
  },
  "dependencies": {
    "@milkdown/core": "^7.18.0",
    "@milkdown/plugin-history": "^7.0.0",
    "@milkdown/plugin-listener": "^7.18.0",
    "@milkdown/plugin-upload": "^7.0.0",
    "@milkdown/preset-commonmark": "^7.18.0",
    "@milkdown/theme-nord": "^7.18.0",
    "@milkdown/utils": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1"
  },
  "keywords": [
    "markdown",
    "editor",
    "fleabox",
    "notes"
  ],
  "author": "",
  "license": "MIT"
}
